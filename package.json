{
  "name": "nestjs-starter",
  "version": "1.0.0",
  "description": "NestJS starter project",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf build && yarn gql:generate-types",
    "start": "yarn start:dev",
    "start:dev": "APP_ENV=local-development NODE_ENV=development NODE_PATH=./src nest start --watch",
    "start:debug": "APP_ENV=local-development NODE_ENV=development NODE_PATH=./src nest start --exec 'node --inspect-brk=0.0.0.0:9229' --watch",
    "start:prod": "NODE_ENV=production NODE_PATH=./dist scripts/start-prod.sh",
    "build": "nest build",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "yarn lint --fix",
    "gql:generate-types": "node dev/graphql/generate-types.js",
    "gql:generate-types:watch": "yarn gql:generate-types --watch",
    "config:encrypt": "dev/env/encrypt-config.sh",
    "config:decrypt": "dev/env/decrypt-config.sh",
    "config:use": "dev/env/use-config.sh",
    "config:secret:save": "dev/env/save-config-secret.sh",
    "config:secret:generate": "dev/env/generate-config-secret.sh",
    "codegen:config": "hygen generators config && yarn lint:fix",
    "docker": "docker compose run --service-ports --rm app yarn",
    "docker:bash": "docker exec -it kube-backend bash",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "heroku:deploy": "./dev/heroku/deploy.sh"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.9",
    "@nestjs/common": "^8.4.4",
    "@nestjs/core": "^8.4.4",
    "@nestjs/graphql": "^10.0.10",
    "@nestjs/platform-express": "^8.4.4",
    "apollo-server": "^3.6.7",
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "graphql": "^15.8.0",
    "pm2": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.10",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.27",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "chokidar": "^3.5.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^4.0.0",
    "hygen": "^6.2.0",
    "prettier": "^2.6.2",
    "supertest": "^6.2.2",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0"
  }
}
